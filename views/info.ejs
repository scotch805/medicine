<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </head>
<body>
  <header>
      <%- include('./header') %>
  </header>
	<main>
      <div class="container">  
        <!--아이디-->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                아이디
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_id%>
                </div>
              </div>
            </div>
          </div>       
           <!--패스워드  -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                패스워드
              </div>
              <div class="col-sm-9">
                <div class="row">
                  ******
                </div>
              </div>
            </div>
          </div>   
          <!--이름-->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                이름
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_name%>
                </div>
              </div>
            </div>
          </div>   
          <!--이메일-->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                이메일
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_email%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 나이 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                나이
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_age%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 성별 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                성별
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_sex%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 키 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                키
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_height%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 몸무게 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                몸무게
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_weight%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 병 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                병
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_sick1%>,
                  <%=user_sick2%>,
                  <%=user_sick3%>,
                  <%=user_sick4%>,
                  <%=user_sick5%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 알레르기 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                알레르기
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_allergy1%>,
                  <%=user_allergy2%>,
                  <%=user_allergy3%>,
                  <%=user_allergy4%>,
                  <%=user_allergy5%>
                </div>
              </div>
            </div>
          </div>  
          <!-- 특이사항 -->
          <div class="container">
            <div class="row">
              <div class="col-sm-3">
                특이사항
              </div>
              <div class="col-sm-9">
                <div class="row">
                  <%=user_significant1%>,
                  <%=user_significant2%>,
                  <%=user_significant3%>,
                  <%=user_significant4%>,
                  <%=user_significant5%>
                </div>
              </div>
            </div>
          </div>  
          <br>
        <button type="submit" class="btn btn-primary" onClick ="location.href='/modify'">수정</button>
      </div>
  </main>
</body>
</html>