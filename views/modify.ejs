<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </head>
<body>
  <header>
      <%- include('./header') %>
  </header>
	<main>
    <form action='/modify' method="post">
        <div class="container">
            <div class="col-xs-8">  
                <!--아이디-->
                <label for="id" class="col-form-label">아이디</label>
                <input type="text" class="form-control" id="id" name="id" hidden value='<%=user_id%>' />
                <%=user_id%>
                <br>
                <!--비밀번호-->
                <label for="password" class="col-form-label">패스워드</label>
                ********
                <br>
                <!--이름-->
                <label for="name" class="col-form-label">이름</label>
                <%=user_name%>
                <input type="text" class="form-control" id="name" name="name" hidden value='<%=user_name%>' />
                <br>
                <!--이메일-->
                <label for="email" class="col-form-label">이메일</label>
                <br>
                <input type="email" class="form-control" id="email" name="email" value='<%=user_email%>'/>
                <!-- 나이 -->
                <label for="age" class="col-form-label">나이</label>
                <input type="text" class="form-control" id="age" name="age" value='<%=user_age%>' />
                <!-- 성별 -->
                <label for="sex" class="col-form-label">성별</label>
                <br>
                <select name="sex" id = sex>
                    <option value='<%=user_sex%>'>성별선택</option>
                    <option value="male">남자</option>
                    <option value="female">여자</option>
                </select>
                <br>
                <!-- 키 -->
                <label for="height" class="col-form-label">키
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="당신의 키를 입력하세요" aria-label="Recipient's username" aria-describedby="basic-addon2" id="height" name="height" value='<%=user_height%>'>
                        <span class="input-group-text" id="basic-addon2">CM</span>
                    </div>
                </label>
                <br>
                <!-- 몸무게 -->
                <label for="weight" class="col-form-label">몸무게
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="당신의 몸무게를 입력하세요" aria-label="Recipient's username" aria-describedby="basic-addon2"id="weight" name="weight"value='<%=user_weight%>'>
                        <span class="input-group-text" id="basic-addon2">KG</span>
                    </div>
                </label>
                <br>
                <!-- 병 -->
                병
                <br>
                <button class="btn btn-primary" type="button" id="sick_pbutton" onclick="spbutton_click()">+</button>
                <button class="btn btn-primary" type="button" id="sick_mbutton" onclick="smbutton_click()">-</button>
                    <div class=" mb-3" id="sick">
                        <input type="text" class="form-control" placeholder="앓고 있는 병들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_sick1%>' id="sick1" name="sick1" hidden >
                        <input type="text" class="form-control" placeholder="앓고 있는 병들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_sick2%>' id="sick2" name="sick2" hidden >
                        <input type="text" class="form-control" placeholder="앓고 있는 병들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_sick3%>' id="sick3" name="sick3" hidden >
                        <input type="text" class="form-control" placeholder="앓고 있는 병들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_sick4%>' id="sick4" name="sick4" hidden >
                        <input type="text" class="form-control" placeholder="앓고 있는 병들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_sick5%>' id="sick5" name="sick5" hidden >
                    </div>
                <br>
                <!-- 알레르기 -->
                알레르기
                <br>
                <button class="btn btn-primary" type="button" id="allergy_pbutton" onclick="apbutton_click()">+</button>
                <button class="btn btn-primary" type="button" id="allergy_mbutton" onclick="ambutton_click()">-</button>
                    <div class=" mb-3" id="allergy">
                        <input type="text" class="form-control" placeholder="앓고 있는 알러지들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_allergy1%>' id="allergy1" name="allergy1" hidden>
                        <input type="text" class="form-control" placeholder="앓고 있는 알러지들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_allergy2%>' id="allergy2" name="allergy2" hidden>
                        <input type="text" class="form-control" placeholder="앓고 있는 알러지들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_allergy3%>' id="allergy3" name="allergy3" hidden>
                        <input type="text" class="form-control" placeholder="앓고 있는 알러지들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_allergy4%>' id="allergy4" name="allergy4" hidden>
                        <input type="text" class="form-control" placeholder="앓고 있는 알러지들" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_allergy5%>' id="allergy5" name="allergy5" hidden>
                    </div>
                <br>
                <!-- 특이사항 -->
                특이사항
                <br>
                <button class="btn btn-primary" type="button" id="significant_pbutton" onclick="sgpbutton_click()">+</button>
                <button class="btn btn-primary" type="button" id="significant_mbutton" onclick="sgmbutton_click()">-</button>
                    <div class=" mb-3" id="significant">
                        <input type="text" class="form-control" placeholder="흡연, 음주 등 특이사항" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_significant1%>' id="significant1" name="significant1" hidden>
                        <input type="text" class="form-control" placeholder="흡연, 음주 등 특이사항" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_significant2%>' id="significant2" name="significant2" hidden>
                        <input type="text" class="form-control" placeholder="흡연, 음주 등 특이사항" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_significant3%>' id="significant3" name="significant3" hidden>
                        <input type="text" class="form-control" placeholder="흡연, 음주 등 특이사항" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_significant4%>' id="significant4" name="significant4" hidden>
                        <input type="text" class="form-control" placeholder="흡연, 음주 등 특이사항" aria-label="Recipient's username" aria-describedby="button-addon2" value='<%=user_significant5%>' id="significant5" name="significant5" hidden>
                    </div>
                <br>
                <br>
                <button type="submit" class="btn btn-primary" >수정완료</button>
            </div>
        </div>
    </form>
  </main>
</body>
<script>
    // 함수의 
    i = 0;
    function spbutton_click(){
        i++;
        if (i >5) {
            alert("병을 입력 할 수 있는 최대치입니다.");
            i = 5;
        }
        document.getElementById(`sick${i}`).removeAttribute('hidden');
        
    }
    function smbutton_click(){
        document.getElementById(`sick${i}`).setAttribute('hidden', true);
        i--;
        if (i < 1) {
        alert("더 이상 병력을 삭제할 수 없습니다.");
        i = 1;
        }
    }



    a = 0;
    function apbutton_click(){
        a++;
        if (a >5) {
        alert("병을 입력 할 수 있는 최대치입니다.");
        a = 5;
        }
        document.getElementById(`allergy${a}`).removeAttribute('hidden');  
    }

    function ambutton_click(){
        document.getElementById(`allergy${a}`).setAttribute('hidden', true);
        a--;
        if (a < 1) {
        alert("더 이상 병력을 삭제할 수 없습니다.");
        a= 1;
        }
    }

    sg = 0;
    function sgpbutton_click(){
        sg++;
        if (sg >5) {
        alert("병을 입력 할 수 있는 최대치입니다.");
        sg = 5;
        }
        document.getElementById(`significant${sg}`).removeAttribute('hidden');    
    }
    function sgmbutton_click(){
        document.getElementById(`significant${sg}`).setAttribute('hidden', true);
        sg--;
        if (sg < 1) {
        alert("더 이상 병력을 삭제할 수 없습니다.");
        sg = 1;
        }
    }
    


</script>
</html>